<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:RetroAchievCollection.ViewModels"
             xmlns:components="using:RetroAchievCollection.Views.Components"
             x:Class="RetroAchievCollection.Views.ConsoleView"
             x:DataType="vm:ConsoleViewModel"
             x:CompileBindings="True">

    <Grid RowDefinitions="50, Auto, *">
        <Grid.Styles>
            <Style Selector="Border.border-button">
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Width" Value="42" />
                <Setter Property="Height" Value="42" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderBrush" Value="gray" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>

            <Style Selector="Button.sync-button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </Grid.Styles>

        <Border Grid.Row="0" Grid.Column="0" Classes="border-button">
            <Button ToolTip.Tip="Synchronize Achievements" Classes="sync-button">
                <PathIcon Data="{StaticResource arrow_sync_regular}" Foreground="White" />
            </Button>
        </Border>

        <Separator Grid.Row="1" Margin="10, 0" />
        
        <ScrollViewer Grid.Row="2">
        <ItemsControl ItemsSource="{Binding Consoles}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <components:ConsoleCard DataContext="{Binding}" Margin="10, 14, 10, 0" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>